<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#111111">
  <TextView android:id="@+id/_name"
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:layout_marginTop="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
	android:gravity="center"
	android:textSize="25sp"
	android:textColor="#F0F0F0"
	android:textStyle="bold"
	android:background="@drawable/setbar_bg"
	/>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginTop="5dip"
    >
    <ImageView android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:paddingLeft="5dip"
      android:src="@drawable/logo"
      />
      <TextView android:id="@+id/_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:padding="5dip"
        android:background="@drawable/bookdes_bg"
        android:textSize="12sp"
	    android:textColor="#A3A77F"
	    />
  </RelativeLayout>
  <Button android:id="@+id/bookmarkbtn"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/itemreadbtnstyle"
    android:textSize="16dip"
    android:text="@string/content_all_favorite"
    />
  <Button android:id="@+id/itemreadcontinuebtn"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/itemreadbtnstyle"
    android:textSize="16dip"
    />
  <ListView android:id="@+id/cataloglistview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:listSelector="#0000"
    android:divider="#0000"
    android:dividerHeight="2dip"
    android:fadingEdge="none"
    android:scrollingCache="false"
    />
</LinearLayout>